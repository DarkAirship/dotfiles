######## MEDIA BUTTONS ########

## Raise volume
XF86AudioRaiseVolume
        amixer set Master 10%+

## Lower volume
XF86AudioLowerVolume
        amixer set Master 10%-

## Mute
XF86AudioMute
        amixer -D pulse set Master 1+ toggle

## Play
XF86AudioPlay
        playerctl play-pause

## Next
XF86AudioNext
        playerctl next

## Previous
XF86AudioPrev
        playerctl previous

## Stop
XF86AudioStop
        playerctl stop

## Brightness up
XF86MonBrightnessUp
        xbacklight -inc 10

## Brightness down
XF86MonBrightnessDown
        xbacklight -dec 10


######## FUNCTION KEYS ########

## Archwiki
F1
        $BROWSER wiki.archlinux.org

## Remote work
F2
        gowork.sh

## Terminal (cannot have TOO many of them)
F3
        xterm

## File manager
F4
        thunar

## Steam
F5
        steam

## Telegram
#F6
#        telegram-desktop

## Journal
F7
        $TERMINAL -e md.sh

## Turn off screen
F8
        xset dpms force off

## Lock screen
F9
        betterlockscreen -l

## Passmenu
F10
        passmenu -fn 'NotoMono Nerd Font:bold:pixelsize=24'

## Browser
F11
        $BROWSER

## Dropdown terminal
F12
        tdrop -am -x 1204 -y 49 -w 700 -h 900 xterm

## Screenshot
Print
        flameshot gui


######## ALWAYS NEED THESE ########

## Terminal and file manager
alt + {_,shift} + Return
        {$TERMINAL,thunar}

alt + {_,shift} + KP_Enter
        {$TERMINAL,thunar}

## Xkill
alt + Escape
        xkill

## Dmenu
alt + d
        dmenu_run -fn 'NotoMono Nerd Font:bold:pixelsize=24'


######## RELOADERS ########

## Bspwm
alt + shift + r
        bspc wm -r

## Sxhkd
alt + shift + s
        pkill -USR1 -x sxhkd

## Polybar
alt + shift + p
        ~/.config/polybar/launch.sh


######## TOGGLES ########

## Picom Toggle
ctrl + shift + o
        ~/.local/bin/picom-toggle.sh

## Polybar toggle
ctrl + shift + p
        polybar-msg cmd toggle


######## SOME USEFUL SHORTCUTS ########

## Logout
ctrl + super + Delete
        archlinux-logout

## Quit bspwm (aka logout)
alt + super + Delete
        bspc quit

## Change wallpaper
## Fantasy option
super + f
        feh --bg-fill -rz --no-fehbg ~/pictures/backgrounds/fantasy

## Reality option
super + r
        feh --bg-fill -rz --no-fehbg ~/pictures/backgrounds/reality

## Emoji selector
alt + e
        dmenuemoji.sh

## Appfinder
alt + a
        xfce4-appfinder


######## BSPWM SETTINGS ########

## Add new desktop
alt + equal
        bspc monitor -a $(bspc query --desktops | wc -l)

## Remove last desktop
alt + minus
        bspc desktop $(bspc query --desktops | sort -n | tail -n 1) -r

## Remove focused desktop
alt + shift + minus
        bspc desktop focused -r

## Close or kill node
alt + {_,shift + }q
        bspc node -{c,k}

## Focus or send to the given desktop
alt + {_,shift + }{1-9,0}
        bspc {desktop -f,node -d} '^{1-9,10}'

## Focus the next/previous desktop in the current monitor
## Two hands
alt + bracket{left,right}
        bspc desktop -f {prev,next}.local

## One hand
alt + {_,shift +}Tab
        bspc desktop -f {next,prev}

## Focus the last node
alt + grave
        bspc node -f last

## Cycle through occupied workspaces
alt + {x,z}
        bspc desktop -f {next,prev}.local.occupied

## Focus the next/previous window in the current desktop
alt + {_,shift + }c
        bspc node -f {next,prev}.local.!hidden.window

## Focus/swap the node in the given direction
alt + {_,shift + }{h,j,k,l}
        bspc node -{f,s} {west,south,north,east}

## Swap the current node and the biggest window
alt + g
        bspc node -s biggest.window

## Alternate between the tiled and monocle layout
alt + m
        bspc desktop -l next

## Set the node flags
alt + ctrl + {y,u,i,o}
    bspc node -g {marked,locked,sticky,private}

## Set the node state
alt + {t,shift + t,s,f}
        bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

## Expand/contract focused node
alt + super + {h,j,k,l}
        n=10; \
        { d1=left;   d2=right;  dx=-$n; dy=0;   \
        , d1=bottom; d2=top;    dx=0;   dy=$n;  \
        , d1=top;    d2=bottom; dx=0;   dy=-$n; \
        , d1=right;  d2=left;   dx=$n;  dy=0;   \
        } \
        bspc node --resize $d1 $dx $dy || bspc node --resize $d2 $dx $dy

## Move a floating window
alt + shift + {Left,Down,Up,Right}
        bspc node -v {-20 0,0 20,0 -20,20 0}

## Preselect the direction
alt + ctrl + {h,j,k,l}
        bspc node -p {west,south,north,east}

## Preselect the ratio
alt + ctrl + {1-9}
        bspc node -o 0.{1-9}

## Cancel the preselection for the focused node
alt + ctrl + BackSpace
        bspc node -p cancel

## Cancel the preselection for the focused desktop
alt + ctrl + shift + BackSpace
        bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

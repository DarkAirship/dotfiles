#################################################################
#     KEYBOARD BINDINGS FOR ANY TWM
#################################################################

#################################################################
#     MULTIMEDIA KEYS
#################################################################

#Raise volume
XF86AudioRaiseVolume
    amixer set Master 10%+

#Lower volume
XF86AudioLowerVolume
    amixer set Master 10%-

#Mute
XF86AudioMute
    amixer -D pulse set Master 1+ toggle

#Play
XF86AudioPlay
    playerctl play-pause

#Next
XF86AudioNext
    playerctl next

#Previous
XF86AudioPrev
    playerctl previous

#Stop
XF86AudioStop
    playerctl stop

#Brightness up
XF86MonBrightnessUp
    xbacklight -inc 10

#Brightness down
XF86MonBrightnessDown
    xbacklight -dec 10


#################################################################
#     FUNCTION KEYS
#################################################################

#Xfce terminal drop-down
F12
    xfce4-terminal --drop-down


#################################################################
#     SUPER + FUNCTION KEYS
#################################################################

#################################################################
#     SUPER + KEYS
#################################################################

#Xfce4-appfinder
super + a
    xfce4-appfinder

#Brave
super + b
    brave

#Diary
super + d
    alacritty -e md

#Email
super + e
    alacritty -e aerc

#Telegram
super + m
    telegram-desktop

#Newsboat
super + n
    alacritty -e newsboat

#Alacritty
super + t
    alacritty

#Pavucontrol
super + v
    pavucontrol

#ArchLinux Logout
super + x
    archlinux-logout

#Youtube
super + y
    brave youtube.com

#Alacritty
super + Return
    alacritty

#Xkill
super + Escape
    xkill


